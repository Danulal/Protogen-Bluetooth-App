<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Protogen_Bluetooth_App.SettingsPage"
             Title="Settings">
    <ContentPage.Resources>
        <Style x:Key="ToggleBtnText" TargetType="Label">
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Start"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style x:Key="SettingsSlider" TargetType="Slider">
            <!--<Setter Property="Margin" Value="0,20,0,0"/>-->
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
    </ContentPage.Resources>

    <Button x:Name="MenuButton"
            Text="Menu Button" FontSize="32" Margin="5,5"
            Pressed="MenuButton_Pressed" Released="MenuButton_Released"/>
</ContentPage>